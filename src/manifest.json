{
	"manifest_version": 2,
	"name": "IBM XForce",
	"version": "1.0",

	"description": "IBM XForce API WebExtension",

	"icons": {
		"48": "images/logo-48.png",
		"96": "images/logo-96.png"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["messaging.js", "htmlParser.js", "config.js", "response.js", "extension.js"],
			"css": ["styles/default.css"]
		}
	],

	"background": {
		"scripts": [
			"messaging.js",
			"config.js",
			"background.js",
			"xforce-api.js",
			"report-cache.js",
			"collection-cache.js"
		]
	},

	"browser_action": {
		"browser_style": true,
		"default_popup": "popup/default.html",
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png"
		}
	},

	"options_ui": {
		"page": "options.html"
	},
	
	"permissions": [
		"contextMenus",
		"activeTab",
		"storage"
	]
}