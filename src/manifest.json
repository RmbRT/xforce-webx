{
	"manifest_version": 2,
	"name": "IBM XForce",
	"version": "1.0",

	"description": "IBM XForce API WebExtension",

	"icons": {
		"48": "images/logo-48.png",
		"96": "images/logo-96.png"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [
				"requirement-content.js",
				"messaging.js",
				"config.js",
				"htmlParser.js",
				"response.js",
				"url-report-command.js",
				"filehash-handler.js",
				"extension.js"],
			"css": ["styles/default.css", "styles/filehash.css"]
		}
	],

	"background": {
		"scripts": [
			"requirement-background.js",
			"messaging.js",
			"context-menu.js",
			"config.js",
			"xforce-api.js",
			"active-collection.js",
			"collection-cache.js",
			"report-cache.js",
			"url-report-command.js",
			"auto-check.js",
			"filehashreport-cache.js",
			"filehash-handler.js",
			"background.js"]
	},

	"browser_action": {
		"browser_style": true,
		"default_popup": "popup/default.html",
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png"
		}
	},

	"web_accessible_resources" : [
		"images/high-16.png", "images/high-32.png",
		"images/medium-16.png", "images/medium-32.png",
		"images/low-16.png", "images/low-32.png"
	],

	"options_ui": {
		"page": "options.html"
	},
	
	"permissions": [
		"contextMenus",
		"activeTab",
		"storage",
		"tabs"
	]
}